<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Shopping Cart - Online Store</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      padding: 20px;
    }

    .container {
      max-width: 900px;
      margin: 0 auto;
    }

    header {
      background: white;
      padding: 20px;
      border-radius: 10px;
      margin-bottom: 30px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    h1 {
      color: #333;
      font-size: 2em;
    }

    .message {
      background: #4caf50;
      color: white;
      padding: 15px;
      border-radius: 5px;
      margin-bottom: 20px;
      animation: slideIn 0.3s ease-in;
    }

    .message.error {
      background: #f44336;
    }

    @keyframes slideIn {
      from {
        transform: translateY(-20px);
        opacity: 0;
      }
      to {
        transform: translateY(0);
        opacity: 1;
      }
    }

    .checkout-container {
      display: grid;
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .cart-section {
      background: white;
      border-radius: 10px;
      padding: 25px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .cart-section h2 {
      color: #333;
      margin-bottom: 20px;
      border-bottom: 2px solid #667eea;
      padding-bottom: 10px;
    }

    .cart-empty {
      text-align: center;
      color: #999;
      padding: 40px;
      font-size: 1.1em;
    }

    .cart-items {
      margin-bottom: 25px;
    }

    .cart-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 15px;
      background: #f9f9f9;
      border-radius: 5px;
      margin-bottom: 10px;
      border-left: 4px solid #667eea;
    }

    .item-info {
      flex: 1;
    }

    .item-name {
      font-size: 1.1em;
      font-weight: bold;
      color: #333;
      margin-bottom: 5px;
    }

    .item-quantity {
      color: #666;
      font-size: 0.95em;
    }

    .remove-btn {
      background: #f44336;
      color: white;
      border: none;
      padding: 8px 15px;
      border-radius: 5px;
      cursor: pointer;
      font-weight: bold;
      transition: background 0.3s;
      margin-left: 15px;
    }

    .remove-btn:hover {
      background: #da190b;
    }

    .cart-summary {
      background: #f0f0f0;
      padding: 20px;
      border-radius: 5px;
      margin-bottom: 25px;
    }

    .summary-row {
      display: flex;
      justify-content: space-between;
      margin-bottom: 10px;
      font-size: 1em;
    }

    .summary-row.total {
      font-size: 1.3em;
      font-weight: bold;
      color: #667eea;
      border-top: 2px solid #999;
      padding-top: 10px;
      margin-top: 10px;
    }

    .actions {
      display: flex;
      gap: 10px;
      flex-wrap: wrap;
    }

    button {
      padding: 12px 25px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 1em;
      font-weight: bold;
      transition: all 0.3s;
      flex: 1;
      min-width: 150px;
    }

    .back-btn {
      background: #667eea;
      color: white;
    }

    .back-btn:hover {
      background: #764ba2;
    }

    .cancel-btn {
      background: #ff9800;
      color: white;
    }

    .cancel-btn:hover {
      background: #e68900;
    }

    .finalize-btn {
      background: #4caf50;
      color: white;
    }

    .finalize-btn:hover {
      background: #45a049;
    }

    .finalize-btn:disabled {
      background: #ccc;
      cursor: not-allowed;
    }

    @media (max-width: 600px) {
      .actions {
        flex-direction: column;
      }

      button {
        width: 100%;
      }

      .cart-item {
        flex-direction: column;
        align-items: flex-start;
      }

      .remove-btn {
        margin-left: 0;
        margin-top: 10px;
        width: 100%;
      }
    }

    footer {
      text-align: center;
      color: white;
      margin-top: 40px;
      padding: 20px;
    }
  </style>
</head>
<body>
  <div class="container">
    <header>
      <h1>üõí Shopping Cart</h1>
    </header>

    <% if (message) { %>
      <div class="message <%= message.includes('error') || message.includes('Error') || message.includes('no longer') ? 'error' : '' %>">
        <%= message %>
      </div>
    <% } %>

    <div class="checkout-container">
      <div class="cart-section">
        <h2>Your Items</h2>

        <% if (cart && cart.length > 0) { %>
          <div class="cart-items">
            <% cart.forEach(item => { %>
              <div class="cart-item">
                <div class="item-info">
                  <div class="item-name"><%= item.name %></div>
                  <div class="item-quantity">Quantity: <strong><%= item.quantity %></strong></div>
                </div>
                <form method="POST" action="/remove-from-cart" style="margin: 0;">
                  <input type="hidden" name="productId" value="<%= item.id %>">
                  <button type="submit" class="remove-btn">Remove</button>
                </form>
              </div>
            <% }); %>
          </div>

          <div class="cart-summary">
            <div class="summary-row">
              <span>Total items in cart:</span>
              <span>
                <% 
                  let total = 0;
                  cart.forEach(item => {
                    total += item.quantity;
                  });
                %>
                <%= total %>
              </span>
            </div>
          </div>

          <div class="actions">
            <form method="GET" action="/" style="flex: 1;">
              <button type="submit" class="back-btn">‚Üê Continue Shopping</button>
            </form>
            <form method="POST" action="/cancel-purchase" style="flex: 1;">
              <button type="submit" class="cancel-btn">‚úï Cancel Purchase</button>
            </form>
            <form method="POST" action="/finalize-purchase" style="flex: 1;">
              <button type="submit" class="finalize-btn">‚úì Finalize Purchase</button>
            </form>
          </div>
        <% } else { %>
          <div class="cart-empty">
            <p>Your shopping cart is empty</p>
            <p style="margin-top: 10px; font-size: 0.9em;">Start adding some products!</p>
          </div>

          <div class="actions">
            <form method="GET" action="/" style="width: 100%;">
              <button type="submit" class="back-btn" style="width: 100%;">‚Üê Continue Shopping</button>
            </form>
          </div>
        <% } %>
      </div>
    </div>

    <footer>
      <p>&copy; 2025 Online Store. All rights reserved.</p>
    </footer>
  </div>
</body>
</html>
